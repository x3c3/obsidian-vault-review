{
  "include": ["src/**/*", "version-bump.ts"],
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": { "src/*": ["src/*"] },
    "types": ["node"]
  }
}
